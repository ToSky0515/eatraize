    "name" : "Landing Reinvent",
    "settings" : [
        {
            "type":"text",
            "id":"header_text",
            "label":"Header Title"
        }
    ],
    "blocks": [
        {
            "type" : "compare_item",
            "name" : "Compare Item",
            "settings" : [
                {
                    "type":"image_picker",
                    "id":"header_img",
                    "label":"Header Image"
                },
                {
                    "type":"text",
                    "id":"netcarbs_val",
                    "label":"Net Carbs Value"
                },  
                {
                    "type":"text",
                    "id":"sugar_val",
                    "label":"Added Sugar Value"
                }, 
                {
                    "type":"text",
                    "id":"gluten_val",
                    "label":"Gluten Free Value"
                }, 
                {
                    "type":"text",
                    "id":"keto_val",
                    "label":"Keto Friendly Value"
                }, 
                {
                    "type":"text",
                    "id":"fresh_val",
                    "label":"Fresh Baked Value"
                }   

            ]
        }

    ]  
}
{% endschema %}