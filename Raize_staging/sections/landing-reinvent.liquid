<style>
    section.landing-reinvent {
        padding-top: 80px;
        padding-bottom: 80px;
        background: #F4CBA0;
    }
    section.landing-reinvent .content {
        width: 1200px;
        margin: auto;
    }
    section.landing-reinvent .content h1 {
        font-family: 'New Spirit';
        font-style: normal;
        font-weight: 700;
        font-size: 45px;
        line-height: 109.3%;
        text-align: center;
        margin-bottom: 60px;
    }
    section.landing-reinvent .content .icon-list {
        display: flex;
        flex-wrap: wrap;
        text-align: center;
        margin: auto;
        width: 800px;
        justify-content: center;
    }
    section.landing-reinvent .content .icon-list .icon-item {
        width: 170px;
        margin: 10px;
    }
    section.landing-reinvent .content .icon-list .icon-item h2 {
        font-family: 'Sofia Pro';
        font-style: normal;
        font-weight: 400;
        font-size: 14px;
        line-height: 25px;
        text-align: center;
        color: #212529;
        margin-top: 15px;        
    }
    @media (max-width: 1200px) {
        section.landing-reinvent .content {
            width: 100%;
        }
    }
    @media (max-width: 800px) {
        section.landing-reinvent .content .icon-list {
            width: 600px;
        }
    }
    @media (max-width: 600px) {
        section.landing-reinvent {
            padding-bottom: 30px;         
        }
        section.landing-reinvent .content {
            width: 100%;
            padding: 0 20px;
        }
        section.landing-reinvent .content h1 {
            font-family: 'New Spirit';
            font-style: normal;
            font-weight: 700;
            font-size: 40px;
            line-height: 109.3%;            
        }
        section.landing-reinvent .content .icon-list {
            width: 100%;
            justify-content: center;
        }
        section.landing-reinvent .content .icon-list .icon-item {
            margin: 0px;
            padding-bottom: 30px;
            width: 167px;
        }
    }
</style>
<section class="landing-reinvent">
    <div class="content">
        <h1>{{section.settings.header_text}}</h1>
        {% if section.blocks.size > 0 %}
            <div class="icon-list">
                {% for block in section.blocks %}
                    <div class="icon-item">
                        <img src="{{block.settings.icon_item|img_url:'master'}}">
                        <h2>{{block.settings.item_desc}}</h2>
                    </div>
                {% endfor %}
            </div>
        {% endif %}         
    </div>
</section>
{% schema %}
{
    "name" : "Landing Reinvent",
    "settings" : [
        {
            "type":"text",
            "id":"header_text",
            "label":"Header Title"
        }
    ],
    "blocks": [
        {
            "type" : "icon_item",
            "name" : "Icon Item",
            "settings" : [
                {
                    "type": "image_picker",
                    "id" : "icon_item",
                    "label": "Icon Item"
                },
                {
                    "type": "text",
                    "id" : "item_desc",
                    "label": "Item Description"
                }      

            ]
        }

    ]  
}
{% endschema %}